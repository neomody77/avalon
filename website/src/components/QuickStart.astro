---
import { t } from '../i18n';
import type { Lang } from '../i18n';

interface Props {
  lang: Lang;
}

const { lang } = Astro.props;

const configCode = `# avalon.toml
[[servers]]
name = "web"
listen = [":80", ":443"]

[[servers.routes]]
host = "example.com"
[servers.routes.handle]
type = "reverse_proxy"
upstreams = ["127.0.0.1:8080"]`;

const runCode = `# Download and run
curl -LO https://github.com/neomody77/avalon/releases/latest/download/avalon
chmod +x avalon
./avalon --config avalon.toml`;
---

<section id="quickstart" class="py-24 px-4">
  <div class="max-w-4xl mx-auto">
    <h2 class="text-3xl sm:text-4xl font-bold text-center mb-16">
      <span class="bg-gradient-to-r from-white to-dark-300 bg-clip-text text-transparent">
        {t(lang, 'quickstart.title')}
      </span>
    </h2>

    <div class="space-y-8">
      <!-- Step 1: Config -->
      <div>
        <div class="flex items-center gap-3 mb-4">
          <span class="flex items-center justify-center w-8 h-8 rounded-full bg-accent-600 text-white text-sm font-semibold">1</span>
          <h3 class="text-lg font-medium text-white">{t(lang, 'quickstart.step1')}</h3>
        </div>
        <div class="relative">
          <pre class="bg-dark-900 border border-dark-800 rounded-xl p-6 overflow-x-auto"><code class="text-sm font-mono text-dark-200">{configCode}</code></pre>
          <button
            class="absolute top-4 right-4 p-2 text-dark-400 hover:text-white transition-colors"
            onclick="navigator.clipboard.writeText(`{configCode}`)"
            title="Copy"
          >
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z"></path>
            </svg>
          </button>
        </div>
      </div>

      <!-- Step 2: Run -->
      <div>
        <div class="flex items-center gap-3 mb-4">
          <span class="flex items-center justify-center w-8 h-8 rounded-full bg-accent-600 text-white text-sm font-semibold">2</span>
          <h3 class="text-lg font-medium text-white">{t(lang, 'quickstart.step2')}</h3>
        </div>
        <div class="relative">
          <pre class="bg-dark-900 border border-dark-800 rounded-xl p-6 overflow-x-auto"><code class="text-sm font-mono text-dark-200">{runCode}</code></pre>
          <button
            class="absolute top-4 right-4 p-2 text-dark-400 hover:text-white transition-colors"
            onclick="navigator.clipboard.writeText(`{runCode}`)"
            title="Copy"
          >
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z"></path>
            </svg>
          </button>
        </div>
      </div>
    </div>
  </div>
</section>

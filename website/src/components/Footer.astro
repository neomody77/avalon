---
import { t } from '../i18n';
import type { Lang } from '../i18n';

interface Props {
  lang: Lang;
}

const { lang } = Astro.props;
const currentYear = new Date().getFullYear();
---

<footer class="py-12 px-4 border-t border-dark-800">
  <div class="max-w-6xl mx-auto">
    <div class="flex flex-col md:flex-row items-center justify-between gap-6">
      <!-- Logo & Copyright -->
      <div class="flex items-center gap-4">
        <span class="text-xl font-bold bg-gradient-to-r from-accent-400 to-accent-600 bg-clip-text text-transparent">
          Avalon
        </span>
        <span class="text-dark-500">|</span>
        <span class="text-dark-400 text-sm">{t(lang, 'footer.copyright')}</span>
      </div>

      <!-- Links -->
      <div class="flex items-center gap-6">
        <a
          href="https://github.com/neomody77/avalon"
          target="_blank"
          rel="noopener noreferrer"
          class="text-dark-400 hover:text-white transition-colors"
        >
          <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
            <path fill-rule="evenodd" clip-rule="evenodd" d="M12 2C6.477 2 2 6.477 2 12c0 4.42 2.865 8.17 6.839 9.49.5.092.682-.217.682-.482 0-.237-.008-.866-.013-1.7-2.782.604-3.369-1.34-3.369-1.34-.454-1.156-1.11-1.464-1.11-1.464-.908-.62.069-.608.069-.608 1.003.07 1.531 1.03 1.531 1.03.892 1.529 2.341 1.087 2.91.831.092-.646.35-1.086.636-1.336-2.22-.253-4.555-1.11-4.555-4.943 0-1.091.39-1.984 1.029-2.683-.103-.253-.446-1.27.098-2.647 0 0 .84-.269 2.75 1.025A9.578 9.578 0 0112 6.836c.85.004 1.705.114 2.504.336 1.909-1.294 2.747-1.025 2.747-1.025.546 1.377.203 2.394.1 2.647.64.699 1.028 1.592 1.028 2.683 0 3.842-2.339 4.687-4.566 4.935.359.309.678.919.678 1.852 0 1.336-.012 2.415-.012 2.743 0 .267.18.578.688.48C19.138 20.167 22 16.418 22 12c0-5.523-4.477-10-10-10z"/>
          </svg>
        </a>
        <span class="text-dark-500 text-sm flex items-center gap-1">
          {t(lang, 'footer.builtWith')}
          <svg class="w-4 h-4 text-orange-500" viewBox="0 0 24 24" fill="currentColor">
            <path d="M23.687 11.709l-9.396-9.396a1.065 1.065 0 00-1.505 0l-1.95 1.95 2.475 2.475a1.267 1.267 0 011.602 1.617l2.386 2.386a1.267 1.267 0 11-.76.753l-2.225-2.225v5.858a1.268 1.268 0 11-1.044-.017V9.125a1.266 1.266 0 01-.688-1.661L9.97 4.832.313 14.489a1.066 1.066 0 000 1.505l9.396 9.396a1.065 1.065 0 001.505 0l9.473-9.473a1.065 1.065 0 000-1.508z"/>
          </svg>
        </span>
      </div>
    </div>

    <div class="mt-8 text-center text-dark-600 text-xs">
      &copy; {currentYear} Avalon Project
    </div>
  </div>
</footer>

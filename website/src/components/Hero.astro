---
import { t } from '../i18n';
import type { Lang } from '../i18n';

interface Props {
  lang: Lang;
}

const { lang } = Astro.props;
---

<section class="relative min-h-[90vh] flex items-center justify-center overflow-hidden">
  <!-- Background gradient -->
  <div class="absolute inset-0 bg-gradient-to-b from-accent-600/10 via-dark-950 to-dark-950"></div>
  <div class="absolute inset-0 bg-[radial-gradient(ellipse_at_top,_var(--tw-gradient-stops))] from-accent-600/20 via-transparent to-transparent"></div>

  <!-- Grid pattern -->
  <div class="absolute inset-0 bg-[linear-gradient(to_right,#1a1a2e_1px,transparent_1px),linear-gradient(to_bottom,#1a1a2e_1px,transparent_1px)] bg-[size:4rem_4rem] [mask-image:radial-gradient(ellipse_60%_50%_at_50%_0%,#000_70%,transparent_110%)]"></div>

  <div class="relative z-10 max-w-5xl mx-auto px-4 text-center">
    <!-- Logo/Title -->
    <h1 class="text-6xl sm:text-7xl lg:text-8xl font-bold mb-4 tracking-tight">
      <span class="bg-gradient-to-r from-white via-white to-dark-300 bg-clip-text text-transparent">
        {t(lang, 'hero.title')}
      </span>
    </h1>

    <!-- Subtitle -->
    <p class="text-2xl sm:text-3xl lg:text-4xl font-medium text-dark-200 mb-4">
      {t(lang, 'hero.subtitle')}
    </p>

    <!-- Description -->
    <p class="text-lg sm:text-xl text-dark-400 mb-8 max-w-2xl mx-auto">
      {t(lang, 'hero.description')}
    </p>

    <!-- Feature badges -->
    <div class="flex flex-wrap justify-center gap-3 mb-10">
      <span class="px-4 py-2 bg-dark-800/50 border border-dark-700 rounded-full text-sm text-dark-200">
        {t(lang, 'hero.badges.https')}
      </span>
      <span class="px-4 py-2 bg-dark-800/50 border border-dark-700 rounded-full text-sm text-dark-200">
        {t(lang, 'hero.badges.hotReload')}
      </span>
      <span class="px-4 py-2 bg-dark-800/50 border border-dark-700 rounded-full text-sm text-dark-200">
        {t(lang, 'hero.badges.rhai')}
      </span>
    </div>

    <!-- CTA Buttons -->
    <div class="flex flex-col sm:flex-row items-center justify-center gap-4">
      <a
        href="#quickstart"
        class="px-8 py-3 bg-accent-600 hover:bg-accent-500 text-white font-medium rounded-lg transition-colors w-full sm:w-auto"
      >
        {t(lang, 'hero.getStarted')}
      </a>
      <a
        href={lang === 'zh' ? '/zh/docs/' : '/docs/'}
        class="px-8 py-3 bg-dark-800 hover:bg-dark-700 text-white font-medium rounded-lg border border-dark-600 transition-colors w-full sm:w-auto flex items-center justify-center gap-2"
      >
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
        </svg>
        {t(lang, 'hero.viewDocs')}
      </a>
      <a
        href="https://github.com/neomody77/avalon"
        target="_blank"
        rel="noopener noreferrer"
        class="px-8 py-3 bg-dark-800 hover:bg-dark-700 text-white font-medium rounded-lg border border-dark-600 transition-colors w-full sm:w-auto flex items-center justify-center gap-2"
      >
        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
          <path fill-rule="evenodd" clip-rule="evenodd" d="M12 2C6.477 2 2 6.477 2 12c0 4.42 2.865 8.17 6.839 9.49.5.092.682-.217.682-.482 0-.237-.008-.866-.013-1.7-2.782.604-3.369-1.34-3.369-1.34-.454-1.156-1.11-1.464-1.11-1.464-.908-.62.069-.608.069-.608 1.003.07 1.531 1.03 1.531 1.03.892 1.529 2.341 1.087 2.91.831.092-.646.35-1.086.636-1.336-2.22-.253-4.555-1.11-4.555-4.943 0-1.091.39-1.984 1.029-2.683-.103-.253-.446-1.27.098-2.647 0 0 .84-.269 2.75 1.025A9.578 9.578 0 0112 6.836c.85.004 1.705.114 2.504.336 1.909-1.294 2.747-1.025 2.747-1.025.546 1.377.203 2.394.1 2.647.64.699 1.028 1.592 1.028 2.683 0 3.842-2.339 4.687-4.566 4.935.359.309.678.919.678 1.852 0 1.336-.012 2.415-.012 2.743 0 .267.18.578.688.48C19.138 20.167 22 16.418 22 12c0-5.523-4.477-10-10-10z"/>
        </svg>
        {t(lang, 'hero.viewGithub')}
      </a>
    </div>
  </div>

  <!-- Scroll indicator -->
  <div class="absolute bottom-8 left-1/2 -translate-x-1/2 animate-bounce">
    <svg class="w-6 h-6 text-dark-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
    </svg>
  </div>
</section>

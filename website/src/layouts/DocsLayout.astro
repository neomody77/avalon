---
import { getLangFromUrl, t, getAlternateUrl } from '../i18n';
import type { Lang } from '../i18n';

interface Props {
  title: string;
  description?: string;
}

const url = Astro.url;
const lang = getLangFromUrl(url) as Lang;
const { title, description = t(lang, 'meta.description') } = Astro.props;
const fullTitle = `${title} - Avalon Docs`;
const alternateUrl = getAlternateUrl(url, lang === 'en' ? 'zh' : 'en');
const alternateLang = lang === 'en' ? 'zh' : 'en';

const docsNav = [
  { key: 'getting-started', href: lang === 'zh' ? '/zh/docs' : '/docs' },
  { key: 'configuration', href: lang === 'zh' ? '/zh/docs/configuration' : '/docs/configuration' },
  { key: 'examples', href: lang === 'zh' ? '/zh/docs/examples' : '/docs/examples' },
  { key: 'rhai', href: lang === 'zh' ? '/zh/docs/rhai' : '/docs/rhai' },
  { key: 'llm', href: '/docs/llm.txt', external: true },
];

const currentPath = url.pathname;
---

<!doctype html>
<html lang={lang} class="dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <meta name="keywords" content="reverse proxy, load balancer, Rust, Pingora, HTTPS, TLS, documentation" />
    <meta name="author" content="Avalon Team" />
    <meta name="robots" content="index, follow" />

    <!-- Open Graph -->
    <meta property="og:type" content="article" />
    <meta property="og:title" content={fullTitle} />
    <meta property="og:description" content={description} />
    <meta property="og:url" content={url.href} />
    <meta property="og:site_name" content="Avalon" />
    <meta property="og:locale" content={lang === 'zh' ? 'zh_CN' : 'en_US'} />

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary" />
    <meta name="twitter:title" content={fullTitle} />
    <meta name="twitter:description" content={description} />

    <!-- Canonical & Alternate -->
    <link rel="canonical" href={url.href} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="alternate" hreflang={alternateLang} href={alternateUrl} />
    <link rel="alternate" hreflang={lang} href={url.href} />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=JetBrains+Mono:wght@400;500&display=swap" rel="stylesheet" />
    <title>{fullTitle}</title>
    <style is:global>
      * { box-sizing: border-box; margin: 0; padding: 0; }
      html { scroll-behavior: smooth; }
      ::selection { background: rgba(99, 102, 241, 0.3); }

      .prose { color: #d1d5db; line-height: 1.75; }
      .prose h1 { font-size: 2.25rem; font-weight: 700; margin-bottom: 1rem; color: #fff; }
      .prose h2 { font-size: 1.5rem; font-weight: 600; margin-top: 2rem; margin-bottom: 1rem; color: #fff; border-bottom: 1px solid #374151; padding-bottom: 0.5rem; }
      .prose h3 { font-size: 1.25rem; font-weight: 600; margin-top: 1.5rem; margin-bottom: 0.75rem; color: #fff; }
      .prose p { margin-bottom: 1rem; }
      .prose ul, .prose ol { margin-bottom: 1rem; padding-left: 1.5rem; }
      .prose li { margin-bottom: 0.5rem; }
      .prose code { background: #1f2937; padding: 0.125rem 0.375rem; border-radius: 0.25rem; font-size: 0.875rem; font-family: 'JetBrains Mono', monospace; }
      .prose pre { background: #111827; border: 1px solid #374151; border-radius: 0.5rem; padding: 1rem; overflow-x: auto; margin-bottom: 1rem; }
      .prose pre code { background: transparent; padding: 0; font-size: 0.875rem; }
      .prose a { color: #818cf8; text-decoration: none; }
      .prose a:hover { text-decoration: underline; }
      .prose table { width: 100%; border-collapse: collapse; margin-bottom: 1rem; }
      .prose th, .prose td { border: 1px solid #374151; padding: 0.5rem 0.75rem; text-align: left; }
      .prose th { background: #1f2937; font-weight: 600; color: #fff; }
      .prose blockquote { border-left: 4px solid #6366f1; padding-left: 1rem; margin: 1rem 0; color: #9ca3af; }
      .prose hr { border: none; border-top: 1px solid #374151; margin: 2rem 0; }
    </style>
    <link rel="stylesheet" href="/_astro/index.Bpk3_p4d.css" />
  </head>
  <body class="bg-dark-950 text-dark-100 antialiased min-h-screen">
    <!-- Header -->
    <nav class="fixed top-0 left-0 right-0 z-50 bg-dark-950/80 backdrop-blur-md border-b border-dark-800">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex items-center justify-between h-16">
          <a href={lang === 'zh' ? '/zh' : '/'} class="flex items-center gap-2">
            <span class="text-xl font-bold bg-gradient-to-r from-accent-400 to-accent-600 bg-clip-text text-transparent">
              Avalon
            </span>
          </a>
          <div class="flex items-center gap-6">
            <a href={lang === 'zh' ? '/zh/docs' : '/docs'} class="text-accent-400 text-sm font-medium">
              {t(lang, 'nav.docs')}
            </a>
            <a href="https://github.com/neomody77/avalon" target="_blank" rel="noopener noreferrer" class="text-dark-300 hover:text-white transition-colors text-sm">
              GitHub
            </a>
            <a
              href={lang === 'zh' ? '/docs' : '/zh/docs'}
              class="px-3 py-1.5 text-sm border border-dark-600 rounded-md text-dark-300 hover:text-white hover:border-dark-400 transition-colors"
            >
              {lang === 'zh' ? 'EN' : 'CN'}
            </a>
          </div>
        </div>
      </div>
    </nav>

    <div class="pt-16 flex">
      <!-- Sidebar -->
      <aside class="fixed left-0 top-16 bottom-0 w-64 border-r border-dark-800 overflow-y-auto bg-dark-950 p-6">
        <nav class="space-y-2">
          <h3 class="text-xs font-semibold text-dark-500 uppercase tracking-wider mb-4">
            {t(lang, 'docs.nav.title')}
          </h3>
          {docsNav.map((item) => (
            <a
              href={item.href}
              target={item.external ? '_blank' : undefined}
              rel={item.external ? 'noopener noreferrer' : undefined}
              class={`block px-3 py-2 rounded-lg text-sm transition-colors ${
                currentPath === item.href || currentPath === item.href + '/'
                  ? 'bg-accent-600/20 text-accent-400 font-medium'
                  : 'text-dark-300 hover:text-white hover:bg-dark-800'
              } ${item.external ? 'flex items-center gap-2' : ''}`}
            >
              {t(lang, `docs.nav.${item.key}`)}
              {item.external && (
                <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
                </svg>
              )}
            </a>
          ))}
        </nav>
      </aside>

      <!-- Main Content -->
      <main class="flex-1 ml-64 p-8 max-w-4xl">
        <article class="prose">
          <slot />
        </article>
      </main>
    </div>
  </body>
</html>
